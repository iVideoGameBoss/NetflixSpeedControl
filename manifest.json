{
  "manifest_version": 3,
  "name": "Netflix Speed Control",
  "version": "1.3",
  "description": "Control Netflix playback speed (2x, 2.5x, 3x) with a popup UI.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Speed Control",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/watch/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}